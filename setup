#!/usr/bin/env bash

echo """
-------------------------------------------------------------
                    Setup Initiated 
-------------------------------------------------------------
"""

config_location=$HOME/.config/config

# Delete older config file
rm -f $config_location

# Create exportable config file for .zshrc
touch $config_location
echo '''#!/usr/bin/env bash

# This is an auto generated file. Please do not edit manually.
''' >> $config_location

#Export initial terminal configs
echo '''# Import initial terminal prompt
#source $HOME/.config/zsh_scripts/simple_terminal_prompt

# Alias
source $HOME/.config/zsh_scripts/aliases

# Misc config
source $HOME/.config/zsh_scripts/misc_configs
''' >> $config_location

#setup starship
source ./starship/setup

#setup iterm2
brew install --cask iterm2

#setup neovim
brew install neovim

#setup ripgrep
brew install ripgrep

#setup tree
brew install tree

#setup fzf
brew install fzf

echo '''# fzf config
# Set up fzf key bindings and fuzzy completion
source <(fzf --zsh)
''' >> $config_location

# END 
echo """
-------------------------------------------------------------
        Setup complete | Reload .zshrc 
-------------------------------------------------------------
"""
